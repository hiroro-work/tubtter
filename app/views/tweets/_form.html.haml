-# frozen_string_literal: true
= simple_form_for [@current_user, @tweet] do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :content, label: 'つぶやく', required: false, placeholder: 'いまどうしてる？'

  .form-actions
    = f.button :submit, 'ツイート'
