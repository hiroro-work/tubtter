.tweet-card
  .card-header
    %h4 #{@tweet.user.name} ・ #{time_ago_in_words(@tweet.created_at, include_seconds: true)}前
  .card-body= simple_format(@tweet.content)
  .card-footer
    - if current_user?(@user)
      .form-inline
        = button_to '更新', edit_user_tweet_path, method: :get, class: 'btn btn-outline-dark btn-sm'
        = button_to '削除', user_tweet_path, method: :delete, class: 'btn btn-outline-dark btn-sm'
    - else
      .form-inline
        = button_to 'リツイート', new_tweet_retweet_path(@tweet), method: :get, class: 'btn btn-outline-dark btn-sm'
.padding-form
  = render 'replies/form', tweet: @tweet, reply: @reply
.padding-child-record
  = render 'replies/index', replies: @tweet.replies.reverse_order.page(params[:page])
