.p-1
  .tweet-card
    .card-header
      #{@retweet.user.name} さんがリツイート
      %h4 #{@retweet.tweet.user.name} ・ #{time_ago_in_words(@retweet.tweet.created_at, include_seconds: true)}前
    .card-body= simple_format(@retweet.tweet.content)

.padding-form
  = simple_form_for [@retweet.user, @retweet] do |f|
    = render 'retweets/form', f: f
